<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20">
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex flex-col">
      <a class="block w-fit mb-2" href="/owner/admin">All Products</a>
      <a class="block w-fit mb-2" href="/owner/admin/product/create"
        >Create new product</a
      >
    </div>
  </div>
  <div class="w-[75%] flex flex-col gap-5 h-screen">
    <!-- <a class="text-red-500" href="">Delete all</a> -->
    <div class="flex items-start gap-5">
      <% products.forEach(function(product){ %>
      <div class="w-60 bg-gray-500">
        <div class="w-full h-full">
          <img
            class="h-[12rem]"
            src="/images/products/<%= product.image%>"
            alt="<%= product.name %>"
          />
        </div>
        <div class="text-white flex justify-between items-center px-4 py-4">
          <div>
            <h3><%= product.name %></h3>
            <h4>â‚¹ <%= product.price %>  </h4>
          </div>
          <a
            class="text-black w-7 h-7 flex items-center justify-center rounded-full bg-white"
            href=""
          >
            <i class="ri-add-line"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>
