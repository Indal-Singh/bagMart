<%- include('./partials/header') %>
    <div class="w-full h-screen px-20 py-20 gap-10">
        <h1 class="text-2xl font-bold mb-6">Your Cart</h1>
        <div class="bg-white shadow-md rounded-lg p-6">
            <div class="space-y-4">
                <% totalPrice = 0 %>
                <% products.forEach(function(product){ %>
                <div class="flex items-center justify-between p-4 border-b">
                    <div class="flex items-center">
                        <img src="/images/products/<%= product.image %>" alt="Product Name" class="w-16 h-16 mr-4">
                        <div>
                            <h2 class="font-semibold">Product Name</h2>
                            <p class="text-gray-500">Quantity: 1</p>
                        </div>
                    </div>
                    <div class="flex flex-col items-end">
                        <span class="text-lg font-semibold">$<%= product.price %></span>
                        <span class="text-gray-500">Total: $<%= product.price %></span>
                    </div>
                </div>
                <% totalPrice += product.price %>
                <% }) %>
            </div>
            <div class="mt-6 flex justify-between">
                <span class="text-lg font-semibold">Total Amount:</span>
                <span class="text-lg">$<%= totalPrice %></span>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>